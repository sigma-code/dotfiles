{
    "workbench.colorTheme": "Allure (rainglow)",
    "editor.fontFamily": "'FiraCode NF'",
    "editor.fontLigatures": true,
    "editor.renderWhitespace": "all",
    "editor.tabSize": 2,
    "editor.fontSize": 13,
    "terminal.explorerKind": "integrated",
    "terminal.integrated.fontFamily": "'FiraCode NF'",
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "terminal.integrated.fontSize": 12,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "java.configuration.runtimes": [
        {
            "name": "JavaSE-1.8",
            "path": "/usr/lib/jvm/java-1.8.0-openjdk-1.8.0.322.b06-6.fc35.x86_64/"
        },
        {
            "name": "JavaSE-11",
            "path": "/usr/lib/jvm/java-11-openjdk-11.0.14.1.1-5.fc35.x86_64/"
        },
        {
            "name": "JavaSE-18",
            "path": "/usr/lib/jvm/java-18-openjdk-18.0.0.0.37-2.rolling.fc35.x86_64/",
            "default": true
        }
    ],
    "java.project.importOnFirstTimeStartup": "automatic",
    "javascript.preferences.importModuleSpecifier": "relative",
    "javascript.preferences.quoteStyle": "single",
    "typescript.preferences.importModuleSpecifier": "relative",
    "typescript.preferences.quoteStyle": "single",
    "workbench.iconTheme": "vs-seti",
    "editor.suggestSelection": "first",
    "gitlens.defaultDateShortFormat": "DD/MM/YYYY",
    "gitlens.defaultDateFormat": "DD/MM/YYYY, h:mma",
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "java.jdt.ls.vmargs": "-XX:+UseParallelGC -XX:GCTimeRatio=4 -XX:AdaptiveSizePolicyWeight=90 -Dsun.zip.disableMemoryMapping=true -Xmx1G -Xms100m -javaagent:\"/home/sigma/.vscode-oss/extensions/gabrielbb.vscode-lombok-1.0.1/server/lombok.jar\"",
    "window.zoomLevel": 2,
    "window.restoreWindows": "none",
    "editor.lineNumbers": "relative",
    "vim.leader": "<space>",
    "vim.hlsearch": true,
    "vim.highlightedyank.enable": true,
    "vim.handleKeys": {
        "<C-j>": false,
        "<C-k>": false,
        "<C-d>": false,
        "<C-b>": false,
        "<C-q>": false
    },
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<Tab>"],
            "commands": [":bn"]
        },
        {
            "before": ["<S-Tab>"],
            "commands": [":bp"]
        },
        {
            "before": ["<leader>", "h"],
            "commands": [":noh"]
        },
        {
            "before": ["<leader>", "k"],
            "commands": [
                "editor.action.showHover"
            ]
        },
        {
            "before": ["<leader>", "e"],
            "commands": [
                "workbench.view.explorer"
            ]
        },
        {
            "before": ["<leader>", "o"],
            "commands": [
                "workbench.action.closeActiveEditor"
            ]
        },
        {
            "before": ["g", "r"],
            "commands": [
                "editor.action.referenceSearch.trigger"
            ]
        }
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": [
                "<Tab>"
            ],
            "commands": [
                "editor.action.indentLines"
            ]
        },
        {
            "before": [
                "<S-Tab>"
            ],
            "commands": [
                "editor.action.outdentLines"
            ]
        },
    ],
    "vim.debug.silent": false,
    "redhat.telemetry.enabled": false,
    "editor.minimap.enabled": false,
    "terminal.external.linuxExec": "kitty",
    "debug.terminal.clearBeforeReusing": true,
    "security.workspace.trust.untrustedFiles": "open",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "window.menuBarVisibility": "toggle",
    "workbench.sideBar.location": "right",
}
